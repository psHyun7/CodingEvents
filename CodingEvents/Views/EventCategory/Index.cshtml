@using CodingEvents.Models

@model List<EventCategory>

<style>
    table, th, td {
        border: 1px solid black;
    }
</style>

<h1>Event Categories</h1>

@if (Model.Count == 0)
{
    <p>No Event Categories Found!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Name</th>
        </tr>
        @foreach (var eventCategory in Model)
        {
            <tr>
                <th>@eventCategory.Id</th>
                <th>@eventCategory.Name</th>
            </tr>
        }
    </table>
}

