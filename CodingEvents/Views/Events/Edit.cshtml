<h1>Edit Event</h1>

<form method="post" action="/events/edit">
    <div class="form-group">
        <label for="name">Name</label>
        <input name="name" type="text" value="@ViewBag.eventToEdit.Name" />
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input name="location" type="text" value="@ViewBag.eventToEdit.Location" />
    </div>
    <div class="form-group">
        <label for="numAttendees">Number of Attendees</label>
        <input name="numAttendees" type="number" min="0" max="100000" value="@ViewBag.eventToEdit.NumAttendees" />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <input name="description" type="text" value="@ViewBag.eventToEdit.Description" />
    </div>
    <div class="form-group">
        <label for="eventType">Event Type</label>
        <select name="eventType">
            @if ((int)ViewBag.eventToEdit.Type == 0)
            {
                <option value="Conference" selected>Conference</option>
            }
            else
            {
                <option value="Conference">Conference</option>
            }
            @if ((int)ViewBag.eventToEdit.Type == 1)
            {
                <option value="Meetup" selected>Meetup</option>
            }
            else
            {
                <option value="Meetup">Meetup</option>
            }
            @if ((int)ViewBag.eventToEdit.Type == 2)
            {
                <option value="Workshop" selected>Workshop</option>
            }
            else
            {
                <option value="Workshop">Workshop</option>
            }
            @if ((int)ViewBag.eventToEdit.Type == 3)
            {
                <option value="Social" selected>Social</option>
            }
            else
            {
                <option value="Social">Social</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="email">Contact Email</label>
        <input name="email" type="email" value="@ViewBag.eventToEdit.ContactEmail" />
    </div>
    <input type="submit" value="Add Event" />
    <input type="hidden" value="@ViewBag.eventToEdit.Id" name="eventId" />
</form>