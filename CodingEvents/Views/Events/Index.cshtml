@using CodingEvents.Models
 
@model List<Event>

<h1>Coding Events</h1>

<p>
    <a asp-controller="Events" asp-action="Add">Add Event</a>
</p>
<p>
    <a asp-controller="Events" asp-action="Delete">Delete Event</a>
</p>


<style>
    table, th, td {
        border: 1px solid black;
    }
</style>      

@if (Model.Count == 0)
{
    <p>No events yet!</p>
}
else
{
<table class="table">
    <tr>
        <th>Id#</th>
        <th>Name</th>
        <th>Description</th>
        <th>Contact Email</th>
    </tr>
    @foreach (var evt in Model)
    {
    <tr>
        <td>@evt.Id</td>
        <td>@evt.Name</td>
        <td>@evt.Description</td>
        <td>@evt.ContactEmail</td>
        <td><a asp-controller="Events" asp-action="Edit" asp-route-eventid="@evt.Id">Edit Event</a></td>
    </tr>
    }
</table>
        
}